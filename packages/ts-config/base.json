{
    "compilerOptions": {
      "composite": false,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSources": false,
      "isolatedModules": true,
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "strict": true
    },
    "mdx": {
      "plugins": [
        [
          "remark-frontmatter",
          ["toml", "yaml"]
        ],
        "remark-gfm"
      ]
    },
    "exclude": ["node_modules"]
  }